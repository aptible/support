/ Template: topics.haml

= wrap_layout :layout do
  %header.breadcrumbs{ 'data-swiftype-index' => 'false' }
    .container
      %ol.breadcrumb
        %li
          %a{ href: '/topics' }Support
        - if @category_url
          %li
            %a{ href: @category_url }= @category_title
        %li.active= @title || title

  .container.no-nav
    .row
      - #.col-xs-2.hidden-xs
      - #= partial 'support_sidebar'

      .col-xs-12.col-sm-12.col-md-8.col-md-offset-2
        .document-hero-title
          - if @category_url
            %h2= @category_title
            %h1= @title || title
          -else
            %h1 Recent Questions: #{@title || title}

        .markdown-document
          = find_and_preserve do
            = yield

          .back
            - if @category_title
              %a{ href: @category_url }← Back to #{@category_title}
            - else
              %a{ href: '/topics' }← Back to all support topics
